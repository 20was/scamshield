FROM scamshield-base:dev

# Set the port for this service
ENV PORT=4001

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port 4001
EXPOSE 4001

# Start the development server
CMD ["pnpm", "run", "dev"]

