FROM scamshield-base:dev

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port 4002
EXPOSE 4002

# Set the port for this service
ENV PORT=4002

# Start the development server
CMD ["pnpm", "run", "dev"]

